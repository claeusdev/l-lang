{
  "version": 2,
  "builds": [
    {
      "src": "web-client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web-client/dist/$1"
    }
  ],
  "functions": {
    "api/evaluate.js": {
      "maxDuration": 30
    }
  }
}